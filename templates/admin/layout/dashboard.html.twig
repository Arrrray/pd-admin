{# Template Parts #}
{% extends "admin/layout/base.html.twig" %}

{% block head_title %}{{ title('admin_dashboard'|trans) }}{% endblock %}
{% block content_title %}
    {{ 'admin_dashboard'|trans }}
    <button v-tooltip v-modal="'widgetModal'" title="{{ 'add_widget'|trans }}"><i class="fas fa-cubes"></i></button>
{% endblock %}

{# Content Body #}
{% block content_body %}
    <modal id="widgetModal" :slim="true" size="lg">
        <template v-slot:title><i class="fas fa-cubes"></i>{{ 'admin_widget_modal_title'|trans }}</template>
        <template v-slot:content="props">
            <table class="table table-hover mb-0 table-bordered">
                {% for widget in pd_widget_get('admin') %}
                    {% if not widget.isActive %}
                        <tr>
                            <td class="text-left" style="width: 40%">{{ widget.name|trans }}</td>
                            <td>{{ widget.description|trans }}</td>
                            <td class="text-center" style="width: 50px">
                                <a href="{{ path('widget_status', { 'widgetId': widget.id, 'status': 1 }) }}"
                                   class="close text-muted"
                                   v-tooltip title="{{ 'add'|trans }}">
                                    <i class="fas fa-plus"></i>
                                </a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            </table>
        </template>
    </modal>

    <div class="dashboard">
        {{ pd_widget_render('admin') }}
    </div>
{% endblock %}
